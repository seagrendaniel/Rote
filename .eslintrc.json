{
  "env": {
    "browser": true,
    "es6": true,
    "jest/globals": true
  },
  "extends": [
    "plugin:react/recommended",
    "airbnb"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "parser": "babel-eslint",
  "plugins": [
    "react",
    "jest"
  ],
  "rules": {
    "comma-dangle": [
      "error",
      "never"
    ],
    "arrow-parens": [
      2,
      "as-needed"
    ],
    "no-multiple-empty-lines": [
      2,
      {
        "max": 1,
        "maxEOF": 1,
        "maxBOF": 0
      }
    ],
    "react/state-in-constructor": 0,
    "no-unused-vars": "warn"
  }
}
